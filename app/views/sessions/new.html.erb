<div class="container">
  <div class="header">
    <h1>Login</h1>
  </div>

  <%= form_tag do %>
    <% if flash[:alert] %>
      <p id="error_explanation"><%= flash[:alert] %></p>
    <% end %>

    <% if notice %>
      <p id="notice"><%= notice %></p>
    <% end %>

    <div class="fields">
      <%= label_tag :name, "Username" %>
      <%= text_field_tag :name, params[:name] %>

      <%= label_tag :password, "Password" %>
      <%= password_field_tag :password, params[:password] %>
    </div>

    <div class="actions">
      <%= submit_tag "Let me in" %>
    </div>
  <% end %>
</div>
