<div class="container">

  <div class="header">
    <h1>Songs</h1>

    <%= link_to 'New', new_song_path %>

    <% if notice %>
      <p id="notice"><%= notice %></p>
    <% end %>
  </div>

  <table class="song-list-table">
    <thead>
      <tr>
        <th class="artist-header">Artist</th>
        <th class="title-header">Title</th>
        <th class="last-requested-header">Last requested</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <%= render song %>
      <% end %>
    </tbody>
  </table>

  <%= paginate @songs %>

  <br>
</div>
